# Deployment Controller Dockerfile
FROM ghcr.io/astral-sh/uv:python3.11-bookworm-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    mysql-client \
    nginx-light \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy UV configuration files from project root
COPY pyproject.toml ./
COPY uv.lock ./ 2>/dev/null || echo "No uv.lock found, will be created"

# Install Python dependencies with UV (deployment group)
ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project --group deployment

# Copy source code
COPY src/ ./src/
COPY config/ ./config/
COPY deployment/ ./deployment/

# Create necessary directories
RUN mkdir -p /app/logs /app/backups

# Create non-root user and set permissions
RUN useradd -m -u 1000 controller && chown -R controller:controller /app
USER controller

# Expose deployment API port
EXPOSE 9000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:9000/health || exit 1

# Start deployment controller
CMD ["uv", "run", "uvicorn", "deployment.api:app", "--host", "0.0.0.0", "--port", "9000"]
