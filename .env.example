# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_NAME=legal_data
DB_USER=root
DB_PASSWORD=password

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/legal_pipeline.log
LOG_MAX_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5

# API 설정
USE_MOCK_DATA=false

# Airflow 설정
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./src/legal_data_pipeline/airflow/dags
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=mysql+pymysql://root:password@localhost:3306/airflow

